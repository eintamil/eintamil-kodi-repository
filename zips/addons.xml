        <import addon="repository.eintamil" version="0.0.1"/>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.requests" version="2.7.0" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>Einthusan Video Addon</summary>
        <description>Einthusan Video Addon</description>
        <news>[B]Version 1.5.0 - 23 February 2020[/B] - [COLOR yellow]Python 3 Upgrade, Bug Fixes and Improvements[/COLOR]</news>
    </extension>
</addon>
</addons>
